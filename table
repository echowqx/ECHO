 <!-- colspan rowspan  
      Name      Phonenumber
      David      555|666
      Jack       777|888
      -->
    <table border="1px" width="100%">
    	<caption>
    		<h2>Colspan and Rowspan
    		</h2>
    	</caption>
           <thead>
           	<tr>
              <th>Name</th>
              <th colspn="2">phoneumber</th>
              <th>Sex</th>
              <th>Age</th> 
           	</tr>
           </thead>
           <tbody>
            <tr>
